<Page
    x:Class="BassBooster.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BassBooster"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid HorizontalAlignment="Left" Height="720" Margin="20,20,0,0" VerticalAlignment="Top" Width="720" Grid.Column="2" Background="Black">
            <Grid x:Name="Grid_Menu" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Grid.Row="3" Background="#FF42B620" Width="300" Height="100">
                <TextBlock x:Name="Menu_Text" />
                <ListView x:Name="Menu_List" />
                <StackPanel x:Name="Menu_SP" />
            </Grid>
            <Grid x:Name="Grid_Right" HorizontalAlignment="Right" Height="300" Margin="0" VerticalAlignment="Top" Width="300" Grid.Row="2">
                <StackPanel x:Name="SP_Player" VerticalAlignment="Top" Height="100" >
                    <MediaElement x:Name="MP3_Player" Height="100" Visibility="Collapsed" AudioCategory="BackgroundCapableMedia"/>
                </StackPanel>
                <Frame x:Name="Frame_Tab" Content="Frame" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Bottom" Width="300" Height="198"/>
            </Grid>
            
        </Grid>

    </Grid>
</Page>
