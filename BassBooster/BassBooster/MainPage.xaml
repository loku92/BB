<Page
    x:Class="BassBooster.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BassBooster"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="PlayerStackPanel" Grid.Column="0" Grid.Row="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <MediaElement x:Name="MP3Player" Visibility="Collapsed" AudioCategory="BackgroundCapableMedia" Grid.Row="0"/>
        </Grid>
        <Grid x:Name="ControlGrid" Grid.Column="1" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <AppBarButton x:Name="PlayButton"  Icon="Play" Label="Play"  VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1" />
            <AppBarButton x:Name="NextButton"  Icon="Next" Label="Next"  Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,90,0"/>
            <AppBarButton x:Name="PrevButton"  Icon="Previous" Label="Previous"  Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="90,0,0,0"/>
            <AppBarButton x:Name="ShuffleButton"  Icon="Shuffle" Label="Shuffle"   VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="0"/>
            <AppBarButton x:Name="ReapetButton" Icon="RepeatAll" Label="Repear All"  Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            <AppBarButton x:Name="FileOpenButton" Icon="OpenFile" Label="Add Music" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <AppBarButton x:Name="ClearListButton" Icon="Clear" Label="Clean list" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="60,0,0,0" RequestedTheme="Dark"/>
            <Slider x:Name="TimeSlider" Grid.Column="1" Grid.Row="1" LargeChange="9" VerticalAlignment="Center" Margin="10,0,30,0"/>
            <TextBlock Text="Volume" Grid.Column="0" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,50,25" />
            <Slider x:Name="VolumeSlider" Grid.Column="0" Grid.Row="1" LargeChange="9" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10,0" Orientation="Vertical" Height="75"/>
            <TextBlock x:Name="TimeBox" Grid.Column="1" HorizontalAlignment="Center" Margin="0,20,0,0" Grid.RowSpan="2" TextWrapping="Wrap" Text="Min:Sec" VerticalAlignment="Center" Grid.Row="1"/>
            <TextBlock x:Name="TitleBox" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Artist - Title" VerticalAlignment="Center" Style="{StaticResource HeaderTextBlockStyle}"/>
            <Image x:Name="VolumeImg" Grid.Column="0" Grid.Row="1" Height="25"  VerticalAlignment="Top" HorizontalAlignment="Right" Width="25" Source="Assets/Speaker_Icon_white.png" Margin="0,30,50,0"/>
        </Grid>
        <Grid x:Name="NavGrid" Grid.Row="1" Background="#FF9C0000" >
            <Grid.RowDefinitions >
                <RowDefinition Height="1*"/>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <ListBox x:Name="NavTab" SelectionMode="Single"  HorizontalAlignment="Left"  Grid.Column="0" Grid.Row="1"  BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="aa" Style="{StaticResource CaptionTextBlockStyle}" ></TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <Frame x:Name="TabFrame" Grid.Column="1" Grid.Row="1" Background="#FFE4E2E2"/>
        
    </Grid>
</Page>
